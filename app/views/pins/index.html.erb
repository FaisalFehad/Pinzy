<h1>Your Pinz Wall</h1>
  <div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
  <div class="box">
    <div class="panel panel-default">
    <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
      <%= pin.description %><br/>
    </div>
    <div class="panel-footer">
      <span class="btn-group">
        <%= link_to 'Edit', edit_pin_path(pin),id:"edit-btn", class: "btn btn-sm btn-default glyphicon glyphicon-pencil" %><br/>

        <%= link_to 'Unpin', pin, id:"unpin-btn", class: "btn btn-sm btn-default glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %><br/>
      </span>
    </div>
</div>
<% end %>