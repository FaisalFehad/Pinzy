<div class="jumbotron">
  <h1>Hello, world!</h1>
  <p>...</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>


<div id="wrapper">
  <div id="columns">
      <div id="pins", class="transitions-enabled">
      <% @pins.each do |pin| %>
      <div class="box">
        <div class="panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %><br/>
          <%= pin.description %><br/>
        </div>

        <div class="panel-footer">
          <h6 id="by"> By:
          <%= pin.user.email %> </h6>
        <hr>
            <div class="btn-group pull-right">
              <%= link_to like_pin_path(pin), method: :put, id:"like-btn", class: "btn btn-xs btn-danger" do %>
              <span class="glyphicon glyphicon-heart"></span>
              <%= pin.get_upvotes.size %>
            <%end %>
            <% if pin.user == current_user %>
              <span class="btn-group ">
                <%= link_to 'Edit', edit_pin_path(pin),id:"edit-btn", class: "btn btn-xs btn-default glyphicon glyphicon-pencil" %><br/>
                <%= link_to 'Unpin', pin, id:"unpin-btn", class: "btn btn-xs btn-default glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %><br/>
            <% end %>
          </span>
        </div>
    </div>
</div>
<% end %>
